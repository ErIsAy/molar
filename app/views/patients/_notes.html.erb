<h1>Notes</h1>
<div class="card">
  <div class="card-content">
    <table>
      <thead>
        <tr>
          <th>Body</th>
          <th>Patient</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @patient.notes.each do |note| %>
          <tr>
            <td><%= note.body %></td>
            <td><%= "#{note.patient.f_name + " " + note.patient.l_name}"%></td>
            <!-- <td><%= link_to 'Show', note %></td> -->
            <td><%= link_to 'Edit', edit_note_path(note, @patient) %></td>
            <td><%= link_to 'Delete', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Add Note', new_patient_note_path(@patient), class: 'waves-effect waves-light btn' %>