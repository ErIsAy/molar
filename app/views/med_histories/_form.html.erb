<%= simple_form_for([@patient, @patient.med_histories.build]) do |f| %>

<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="container">
  <%= render partial: 'chart', :locals => { :f => f } %>
</div>
<br>
<br>
<h1>Antecedentes Medicos</h1>

<div class="row card">

  <div class='input-field col s6'>
    <%=f.label :q1, "Problemas Cardiacos", class: ''%>
    <br>
    <%=f.input :q1, as: :boolean, label: false, checked_value: 'Yes', unchecked_value: 'No', class: 'padl' %>
  </div>

  <div class='input-field col s6'>
    <%=f.label :q2, "Diabetes"%>
    <br>
    <%=f.input :q2, as: :boolean, label: false, checked_value: 'Yes', unchecked_value: 'No', wrapper_html: { class: 'm6 s12' }%>
  </div>
  <div class='input-field col s6'>
    <%=f.label :q3, "Hepatitis"%>
    <br>
    <%=f.input :q3, as: :boolean, label: false, checked_value: 'Yes', unchecked_value: 'No', wrapper_html: { class: 'm6 s12' }%>
  </div>
  <div class='input-field col s6'>
    <%=f.label :q4, "Presion Sanguinea Anormal"%>
