    <%=f.input :q4, as: :boolean, label: false, checked_value: 'Yes', unchecked_value: 'No', wrapper_html: { class: 'm6 s12' }%>
  </div>
  <div class='input-field col s6'>
    <%=f.label :q5, "Asma"%>
