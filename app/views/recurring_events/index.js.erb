<p id="notice"><%= notice %></p>

<h1>Recurring Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Anchor</th>
      <th>Frequency</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recurring_events.each do |recurring_event| %>
      <tr>
        <td><%= recurring_event.title %></td>
        <td><%= recurring_event.anchor %></td>
        <td><%= recurring_event.frequency %></td>
        <td><%= recurring_event.color %></td>
        <td><%= link_to 'Show', recurring_event %></td>
        <td><%= link_to 'Edit', edit_recurring_event_path(recurring_event) %></td>
        <td><%= link_to 'Destroy', recurring_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

