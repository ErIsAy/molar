<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Doctors</h1>

  <div class="card">
    <table>
      <thead>
        <tr>
          <th>F name</th>
          <th>L name</th>
          <th>Specialty</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @doctors.each do |doctor| %>
          <tr>
            <td><%= doctor.f_name %></td>
            <td><%= doctor.l_name %></td>
            <td><%= doctor.specialty %></td>
            <td><%= link_to 'Show', doctor %></td>
            <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
            <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Doctor', new_doctor_path, class: 'waves-effect waves-light btn' %>
</div>